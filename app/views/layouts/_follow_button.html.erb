<% if current_user.follow?(line) %>
    <%= form_for(current_user.follows.find_by(line_id: line.id), html: { method: :delete }) do |f| %>
    
        <%= hidden_field_tag :line_id, line.id %>
        
        <%= f.submit "お気に入り解除", class: "btn btn-danger" %>
    <% end %>
<% else %>
     <%= form_for(current_user.follows.build) do |f| %>
    
        <%= hidden_field_tag :line_id, line.id %>
        
        <%= f.submit "お気に入り", class: "btn btn-primary" %>
    
    <% end %>
<% end %>
    
    
    