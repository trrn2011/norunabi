
<div class="thumb">
　<% if @user.image? %>
　　<%= image_tag @user.image.thumb.url, class: "img-responsive" %>
　<% else %>
　　<%= image_tag 'noimage.gif' %>
　<% end %>
</div>
<div class="name text-center">
 <h1><%= @user.name %></h1>
</div>

<div class="panels">
    <div class="panel good-count-panel text-center" >
     <span><%= @count_fav %></span><br>いいね
    </div>
  
    
  
    <div class="panel ranking-panel text-center">
      <% if @user.count_fav == 0 %>
        <p>圏外</p>
      <% else %>
        <p><%= @rank %>位</p>
      <% end %>
    </div>
   
  
</div>

